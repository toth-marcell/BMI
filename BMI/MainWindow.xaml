<Window x:Class="BMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMI"
        mc:Ignorable="d"
        Title="BMI" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="local:TextBoxWithPlaceholder">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <Label HorizontalAlignment="Center" FontSize="40">BMI</Label>
        <local:TextBoxWithPlaceholder Grid.Row="1" Placeholder="Súly" x:Name="massField" KeyDown="calculate"/>
        <local:TextBoxWithPlaceholder Grid.Row="2" Placeholder="Magasság" x:Name="heightField" KeyDown="calculate"/>
        <Label Grid.Row="3" Content="{Binding}" ContentStringFormat="Eredmény: {0} kg/m^2" x:Name="resultLabel" HorizontalAlignment="Center" FontSize="30"/>
    </Grid>
</Window>
